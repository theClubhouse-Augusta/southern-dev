section.speakers
  header
    h1 Speakers
  div#bios
    each speaker in speakers
      div(class="bio" id=speaker["name"].split(' ').join('') )
        img(src="../images/speaker-" + speaker.image)
        .txt-container
          if speaker["social-media"]
            .social-media
              each val, index in speaker["social-media"]
                a(href=val)
                  i.fab(class="fa-" + index)
          h4= speaker.name
          h5= speaker.company
          p= speaker["bio-short"]
